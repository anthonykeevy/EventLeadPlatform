# EventLead Platform - Environment Configuration Template
# Copy this to .env.local and fill in your values

# Environment
ENVIRONMENT=development

# Database (Local SQL Server)
DATABASE_URL=mssql+pyodbc://localhost/EventLeadPlatform?driver=ODBC+Driver+18+for+SQL+Server&TrustServerCertificate=yes&Encrypt=no

# Frontend URL (for email links, redirects, etc.)
FRONTEND_URL=http://localhost:3000

# JWT Authentication Configuration
# CRITICAL: Generate a strong secret key for production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-min-32-chars-CHANGE-IN-PRODUCTION
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration
# Email provider: "mailhog" for development, "smtp" for production
EMAIL_PROVIDER=mailhog
EMAIL_FROM=noreply@eventlead.com
EMAIL_FROM_NAME=EventLead Platform

# MailHog Configuration (Development)
# Start MailHog: docker-compose up mailhog
# Web UI: http://localhost:8025
MAILHOG_HOST=localhost
MAILHOG_PORT=1025

# SMTP Configuration (Production)
# Uncomment and configure for production email provider (SendGrid, AWS SES, etc.)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USERNAME=apikey
# SMTP_PASSWORD=your_sendgrid_api_key
# SMTP_USE_TLS=true

# Storage (Local)
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./local_storage

# Stripe (Test mode)
STRIPE_SECRET_KEY=sk_test_your_test_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Logging
LOG_LEVEL=DEBUG
LOG_API_REQUESTS=true
LOG_DATABASE_QUERIES=true

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

